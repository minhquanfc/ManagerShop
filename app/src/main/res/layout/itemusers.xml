<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/click_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="TÃªn"
                    android:textSize="14dp"
                    android:textColor="@color/mauchu_managershop" />

                <TextView
                    android:id="@+id/tv_email_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="email"
                    android:textSize="14dp"
                    android:textColor="@color/mauchu_managershop" />

                <TextView
                    android:id="@+id/tv_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="sdt"
                    android:textSize="14dp"
                    android:textColor="@color/mauchu_managershop" />

                <TextView
                    android:id="@+id/tv_address_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="address"
                    android:textSize="14dp"
                    android:textColor="@color/mauchu_managershop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_edit_users"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/icon_edit" />

                <ImageView
                    android:id="@+id/img_del_users"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/icon_xoa" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>